<?xml version="1.0" encoding="utf-8"?>
<resources>
    <string name="tv_heading_admin_dash">Administrators Dashboard</string>


    <color name="admin_bg">#2c3e50</color>
    <dimen name="admin_card_image">60dp</dimen>

    <!--STYLING-->
    <style name="Admin" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/green</item>
        <item name="colorControlNormal">@android:color/white</item>
        <item name="colorControlHighlight">@color/white</item>
        <item name="fontFamily">@font/app_font</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Admin.TextAppearance.Small" parent="Base.TextAppearance.AppCompat.Small">
        <item name="android:fontFamily">@font/app_font</item>
        <item name="fontFamily">@font/app_font</item>
        <item name="android:textColor">@color/green</item>
    </style>

    <style name="Admin.TextAppearance.Medium" parent="Base.TextAppearance.AppCompat.Medium">
        <item name="android:fontFamily">@font/app_font</item>
        <item name="fontFamily">@font/app_font</item>
        <item name="android:textColor">@color/green</item>
    </style>

    <style name="Admin.TextAppearance.Title" parent="Base.TextAppearance.AppCompat.Title">
        <item name="android:fontFamily">@font/app_font</item>
        <item name="fontFamily">@font/app_font</item>
        <item name="android:textColor">@color/green</item>
    </style>

    <!--Button Theme -->
    <style name="Admin.ButtonNormal" parent="Dashboard">
        <item name="colorControlHighlight">@color/green</item>
        <item name="colorButtonNormal">@color/green</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAppearance">@style/Base.TextAppearance.AppCompat.Medium</item>
    </style>

    <style name="Admin.ButtonInverse" parent="Dashboard">
        <item name="colorControlHighlight">@color/admin_bg</item>
        <item name="colorButtonNormal">@color/admin_bg</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAppearance">@style/Base.TextAppearance.AppCompat.Medium</item>
    </style>
    <!--TEXT INPUT LAYOUT-->
    <style name="Admin.EditTextHint" parent="Widget.Design.TextInputLayout">
        <item name="colorAccent">@color/green</item>
        <item name="android:textColor">@color/green</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/green</item>
        <item name="colorControlHighlight">@color/red</item>
    </style>
</resources>