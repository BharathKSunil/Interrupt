<?xml version="1.0" encoding="utf-8"?>
<resources>

    <string name="btn_edit">Edit Info</string>

    <dimen name="dash_custom_tab_width">35dp</dimen>
    <dimen name="dash_social_icon_size">25dp</dimen>

    <string name="cd_profile_image">ProfileImage</string>
    <string name="cd_events_image">EventsImage</string>
    <string name="cd_events_schedule">EventsSchedule</string>
    <string name="cd_manager_image">ManagerImage</string>
    <string name="cd_designers_image">DesignersImage</string>
    <string name="cb_organisers_image">OrganisersImage</string>
    <string name="cd_admins_image">AdminsImage</string>
    <string name="cd_about_app">AboutApp</string>

    <string name="tv_empty_registered_events">We have Awesome Events for Everyone.\nPlease Register ASAP.</string>
    <string name="tv_registered_events">Your Registered Events</string>

    <color name="tab_selected_color">#F3E5F5</color>
    <!--STYLING-->
    <style name="Dashboard" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/primary_dark</item>
        <item name="colorControlNormal">@android:color/white</item>
        <item name="colorControlHighlight">@color/primary_dark</item>
        <item name="fontFamily">@font/app_font</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <!--Button Theme -->
    <style name="Dashboard.ButtonNormal" parent="Dashboard">
        <item name="colorControlHighlight">@color/primary_dark</item>
        <item name="colorButtonNormal">@color/primary</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAppearance">@style/Base.TextAppearance.AppCompat.Title</item>
    </style>

    <style name="Dashboard.ButtonInverse" parent="Dashboard">
        <item name="colorControlHighlight">@color/primary_light</item>
        <item name="colorButtonNormal">@color/white</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textAppearance">@style/Base.TextAppearance.AppCompat.Title</item>
    </style>

    <style name="Dashboard.ButtonBorderLess" parent="Dashboard">
        <item name="colorControlHighlight">@color/accent</item>
        <item name="colorButtonNormal">@color/transparent</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAppearance">@style/Base.TextAppearance.AppCompat.Title</item>
    </style>

    <style name="Dashboard.TextAppearance.Small" parent="Base.TextAppearance.AppCompat.Small">
        <item name="android:fontFamily">@font/app_font</item>
        <item name="fontFamily">@font/app_font</item>
    </style>

    <style name="Dashboard.TextAppearance.Medium" parent="Base.TextAppearance.AppCompat.Medium">
        <item name="android:fontFamily">@font/app_font</item>
        <item name="fontFamily">@font/app_font</item>
    </style>

    <style name="Dashboard.TextAppearance.Title" parent="Base.TextAppearance.AppCompat.Title">
        <item name="android:fontFamily">@font/app_font</item>
        <item name="fontFamily">@font/app_font</item>
        <item name="android:textSize">25sp</item>
    </style>


    <color name="saffron">#F4B63E</color>
    <color name="sienna">#EB6460</color>
    <color name="green">#10b4a5</color>
    <color name="purple">#7c57e4</color>
    <color name="pink">#ff4284</color>
    <color name="orange">#ff8c6a</color>

    <style name="TextView">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="TextView.Interest" parent="TextView">
        <item name="android:background">@drawable/round_text_view</item>
        <item name="android:layout_margin">3dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextView.Nickname" parent="TextView">
        <item name="android:textSize">30sp</item>
        <item name="android:layout_marginTop">30dp</item>
        <item name="android:layout_marginLeft">20dp</item>
    </style>

    <style name="LinearLayout" />

    <style name="LinearLayout.Interests">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginTop">14dp</item>
        <item name="android:layout_marginLeft">14dp</item>
        <item name="android:orientation">horizontal</item>
    </style>

</resources>