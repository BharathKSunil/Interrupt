<?xml version="1.0" encoding="utf-8"?>
<resources>

    <string name="tv_empty_categories">No Event Categories have been Added yet. Come Back Soon Later</string>
    <string name="tv_empty_events">No Events in this category have been added yet. Come Back Soon Later</string>
    <string name="tv_empty_coordinating_events">No Events Has yet been Assigned to you.\nYour Events will appear Here.</string>

    <string name="tv_heading_coordinating_events">Coordinating Events</string>

    <color name="blue">#348af7</color>
    <color name="event_price_background">@color/blue</color>
    <color name="event_price_text">@android:color/white</color>

    <dimen name="recycler_view_left_offset">9dp</dimen>
    <dimen name="left_offset">61dp</dimen>
    <dimen name="card_width">148dp</dimen>
    <dimen name="card_corner_radius">10dp</dimen>
    <integer name="labels_animation_duration">350</integer>

    <style name="PriceTextView">
        <item name="android:fontFamily">@font/app_font</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/event_price_text</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="ClockTextView">
        <item name="android:fontFamily">@font/app_font</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/accent</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="VenueTextView">
        <item name="android:fontFamily">@font/app_font</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/primary_dark</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="CoordinatorsTextView">
        <item name="android:fontFamily">@font/app_font</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/blue</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="DescriptionTextView">
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">@font/app_font</item>
    </style>
    <!--STYLING-->
    <style name="Events" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/primary_dark</item>
        <item name="colorControlNormal">@android:color/white</item>
        <item name="colorControlHighlight">@color/primary_dark</item>
        <item name="fontFamily">@font/app_font</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <!--Button Theme -->
    <style name="Events.ButtonNormal" parent="Dashboard">
        <item name="colorControlHighlight">@color/primary_dark</item>
        <item name="colorButtonNormal">@color/primary</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAppearance">@style/Base.TextAppearance.AppCompat.Title</item>
    </style>

    <style name="Events.ButtonInverse" parent="Dashboard">
        <item name="colorControlHighlight">@color/primary_light</item>
        <item name="colorButtonNormal">@color/white</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textAppearance">@style/Base.TextAppearance.AppCompat.Title</item>
    </style>

    <style name="Events.ButtonBorderLess" parent="Dashboard">
        <item name="colorControlHighlight">@color/accent</item>
        <item name="colorButtonNormal">@color/transparent</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAppearance">@style/Base.TextAppearance.AppCompat.Title</item>
    </style>

    <style name="Events.TextAppearance.Small" parent="Base.TextAppearance.AppCompat.Small">
        <item name="android:fontFamily">@font/app_font</item>
        <item name="fontFamily">@font/app_font</item>
    </style>

    <style name="Events.TextAppearance.Medium" parent="Base.TextAppearance.AppCompat.Medium">
        <item name="android:fontFamily">@font/app_font</item>
        <item name="fontFamily">@font/app_font</item>
    </style>

    <style name="Events.TextAppearance.Title" parent="Base.TextAppearance.AppCompat.Title">
        <item name="android:fontFamily">@font/app_font</item>
        <item name="fontFamily">@font/app_font</item>
    </style>

</resources>