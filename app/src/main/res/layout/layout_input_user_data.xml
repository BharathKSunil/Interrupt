<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="8dp"
    android:paddingBottom="20dp">
    <!--NAME-->
    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/til_name">
        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textCapWords"
            android:hint="@string/hint_name" />
    </android.support.design.widget.TextInputLayout>
    <!--EMAIL-->
    <include layout="@layout/layout_input_email"/>
    <!--PHONE NUMBER-->
    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/til_phone">
        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:hint="@string/hint_phone" />
    </android.support.design.widget.TextInputLayout>
    <!--USN-->
    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/til_usn">
        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textCapCharacters"
            android:hint="@string/hint_usn" />
    </android.support.design.widget.TextInputLayout>
    <!--DEPARTMENT-->
    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/til_department">
        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textCapCharacters"
            android:hint="@string/hint_department" />
    </android.support.design.widget.TextInputLayout>
    <!--SECTIONS-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginStart="4dp"
        android:text="@string/hint_section"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"/>
    <RadioGroup
        android:id="@+id/rg_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <!--SECTION A-->
        <RadioButton
            android:id="@+id/rb_section_a"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/section_a"
            android:checked="true"
            android:layout_weight="1"/>
        <!--SECTION B-->
        <RadioButton
            android:id="@+id/rb_section_b"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/section_b"
            android:layout_weight="1"/>
        <!--SECTION C-->
        <RadioButton
            android:id="@+id/rb_section_c"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/section_c"
            android:layout_weight="1"
            />
        <!--SECTION NOT APPLICABLE-->
        <RadioButton
            android:id="@+id/rb_section_na"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/section_na"
            android:layout_weight="1"/>
    </RadioGroup>
    <!--SEMESTER-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginStart="4dp"
        android:text="@string/hint_semester"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"/>
    <RadioGroup
        android:id="@+id/rg_semester"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <!--SEM 2-->
        <RadioButton
            android:id="@+id/rb_sem_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sem_2"
            android:checked="true"
            android:layout_weight="1"/>
        <!--SEM 4-->
        <RadioButton
            android:id="@+id/rb_sem_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sem_4"
            android:layout_weight="1"/>
        <!--SEM 6-->
        <RadioButton
            android:id="@+id/rb_sem_6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sem_6"
            android:layout_weight="1"
            />
        <!--SEM 8-->
        <RadioButton
            android:id="@+id/rb_sem_8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sem_8"
            android:layout_weight="1"
            />
        <!--SEM NOT APPLICABLE-->
        <RadioButton
            android:id="@+id/rb_sem_na"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/section_na"
            android:layout_weight="1"/>
    </RadioGroup>
</LinearLayout>