<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/tv_offstage_info_heading"
        android:textAppearance="@style/Dashboard.TextAppearance.Medium"
        android:textColor="@color/primary_dark" />

    <include layout="@layout/divider_horizontal" />

    <TextView
        android:id="@+id/tv_empty_prompt_team_offstage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/tv_empty_off_stage"
        android:textAppearance="@style/Dashboard.TextAppearance.Small" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_offstage_team"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>