<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    app:cardBackgroundColor="@color/green"
    app:cardElevation="4dp"
    app:contentPadding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_row_feedback_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/Admin.TextAppearance.Small"
            android:textColor="@color/black"
            tools:text="06:30 PM, 2 April 2018" />

        <TextView
            android:id="@+id/tv_row_feedback_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/Admin.TextAppearance.Medium"
            android:textColor="@color/white"
            tools:text="Bharath Kumar S" />

        <TextView
            android:id="@+id/tv_row_feedback_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/Admin.TextAppearance.Small"
            android:textColor="@color/black"
            android:autoLink="email"
            tools:text="bharathk.sunil.k@gmail.com" />

        <TextView
            android:id="@+id/tv_row_feedback_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/Admin.TextAppearance.Small"
            android:textColor="@color/white"
            tools:text="Hi this is the feedback the user has given. it can be ver long or very short" />
    </LinearLayout>
</android.support.v7.widget.CardView>