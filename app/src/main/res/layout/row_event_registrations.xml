<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="4dp"
    app:cardElevation="4dp"
    app:cardUseCompatPadding="true"
    app:contentPadding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@style/Events.TextAppearance.Small"
            android:textColor="@color/primary_text"
            tools:text="Bharath Kumar S[1DA14CS025]" />

        <TextView
            android:id="@+id/tv_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autoLink="email"
            android:textAppearance="@style/Events.TextAppearance.Small"
            tools:text="bharathk.sunil.k@gmail.com" />

        <TextView
            android:id="@+id/tv_phoneNo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autoLink="phone"
            android:textIsSelectable="true"
            android:textAppearance="@style/Events.TextAppearance.Small"
            tools:text="8867036863" />

        <TextView
            android:id="@+id/tv_college_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/accent"
            android:textIsSelectable="true"
            android:textAppearance="@style/Events.TextAppearance.Small"
            tools:text="8th A CSE" />

        <include layout="@layout/divider_horizontal" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:text="@string/registered_by"
                android:textAppearance="@style/Events.TextAppearance.Small"
                android:textColor="@color/primary_text"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/tv_registrar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAppearance="@style/Events.TextAppearance.Small"
                android:textColor="@color/accent"
                tools:text="Deepika Singh"
                android:layout_weight="1"/>
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>