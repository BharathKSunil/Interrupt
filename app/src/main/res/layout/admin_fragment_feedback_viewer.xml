<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent"
    android:orientation="vertical"
    tools:background="@color/admin_bg"
    tools:context="com.bharathksunil.interrupt.admin.ui.fragments.FeedbackViewerFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="@string/tv_heading_user_feedback"
        android:textAppearance="@style/Admin.TextAppearance.Title" />

    <include layout="@layout/layout_progress_bar" />

    <TextView
        android:id="@+id/tv_empty_prompt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="@string/tv_empty_feedback"
        android:textAppearance="@style/Admin.TextAppearance.Small"
        android:textColor="@color/white"
        android:visibility="gone"
        tools:visibility="visible" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_feedback"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>
