<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.bharathksunil.interrupt">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".Interrupt"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".auth.ui.LauncherActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Auth">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

        <activity
            android:name=".dashboard.ui.MainDashboardActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Dashboard" />
        <activity
            android:name=".events.ui.activities.EventsViewerActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Events" />
        <activity
            android:name=".events.ui.activities.EventsBannerViewer"
            android:screenOrientation="portrait"
            android:theme="@style/Events" />
        <activity
            android:name=".events.ui.activities.OrganisersDashboardActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Events" />
        <activity
            android:name=".admin.ui.AdminDashboardActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Admin" />
        <activity
            android:name=".events.ui.activities.EventDashboardActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Events" />
    </application>

</manifest>